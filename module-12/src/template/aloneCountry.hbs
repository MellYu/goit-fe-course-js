   
   <h2 class="county__title">{{name}}</h2>
    <div class="description"><div class="county__des">
        <p class="country__capital">Capital: <span class="country-info">{{capital}}</span></p>
        <p class="country__population">Population: <span class="country-info">{{population}}</span></p>
        <ul class="country__languages">
            <p class="languages__title">Languages:</p>
                {{#each languages}}
                <li class="languages__item">{{name}}</li>
                {{/each}}
        </ul>
        </div>
        <div class="country__flag">
        <img class="flag" src="{{flag}}" alt="Flag of {{name}}">
    </div>
        </div>
    
